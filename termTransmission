#!/bin/bash

# Check for Transmission process
process_name="[T]ransmission"

# Get the process ID (PID) using ps aux and grep
pid=$(ps aux | grep "$process_name" | grep -v grep | awk '{print $2}')

# Check if Transmission is running
if [ -z "$pid" ]; then
    echo "Transmission is not running."
    exit 1
fi

# Kill the Transmission process
kill "$pid"

if [ $? -eq 0 ]; then
    echo "Transmission (PID: $pid) has been terminated."
else
    echo "Failed to kill Transmission."
fi

